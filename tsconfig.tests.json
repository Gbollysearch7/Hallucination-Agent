{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-tests",
    "noEmit": false,
    "module": "commonjs",
    "target": "ES2020",
    "jsx": "react-jsx",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "app/api/**/*.ts",
    "lib/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
